<body>

    <canvas id="fireworksCanvas"></canvas>

    <div id="floatingContainer" class="floating-container"></div>

    <script>
        /* ==========================================
           PH·∫¶N 1: C·∫§U H√åNH D·ªÆ LI·ªÜU C·ª¶A B·∫†N
           (Thay ·∫£nh v√† l·ªùi ch√∫c t·∫°i ƒë√¢y)
           ========================================== */
        
        // Danh s√°ch l·ªùi ch√∫c
        const wishes = [
            "NƒÉm m·ªõi b√¨nh an ‚ù§Ô∏è",
            "Ch√∫c em lu√¥n xinh ƒë·∫πp v√† h·∫°nh ph√∫c",
            "NƒÉm m·ªõi an khang th·ªãnh v∆∞·ª£ng",
            "Y√™u ƒë·ªùi m·ªói ng√†y nh√©! üòç",
            "M·ªçi ƒëi·ªÅu ∆∞·ªõc ƒë·ªÅu th√†nh hi·ªán th·ª±c ‚ú®",
            "Happy New Year! üéÜ",
            "Lu√¥n m·ªâm c∆∞·ªùi em nh√© üòä",
            "Gia ƒë√¨nh h·∫°nh ph√∫c sum v·∫ßy"
        ];

        // Danh s√°ch link ·∫£nh (B·∫°n h√£y thay link ·∫£nh th·∫≠t c·ªßa b·∫°n v√†o ƒë√¢y)
        // Hi·ªán t·∫°i m√¨nh ƒë·ªÉ ·∫£nh m·∫´u ng·∫´u nhi√™n
        const images = [
            "https://picsum.photos/200/300?random=1", 
            "https://picsum.photos/200/200?random=2",
            "https://picsum.photos/200/300?random=3",
            "https://picsum.photos/200/250?random=4"
        ];

        /* ==========================================
           PH·∫¶N 2: X·ª¨ L√ù HI·ªÜU ·ª®NG BAY L√äN (FLOATING)
           ========================================== */
        const container = document.getElementById('floatingContainer');

        function createFloatingElement() {
            const el = document.createElement('div');
            el.classList.add('float-item');

            // Ng·∫´u nhi√™n ch·ªçn: 0 l√† Ch·ªØ, 1 l√† ·∫¢nh
            const type = Math.random() > 0.4 ? 'text' : 'image'; // 60% ra ch·ªØ, 40% ra ·∫£nh

            if (type === 'text') {
                el.classList.add('wish-text');
                el.innerText = wishes[Math.floor(Math.random() * wishes.length)];
            } else {
                const img = document.createElement('img');
                img.src = images[Math.floor(Math.random() * images.length)];
                img.classList.add('wish-img');
                el.appendChild(img);
            }

            // Random v·ªã tr√≠ xu·∫•t hi·ªán (tr√°i -> ph·∫£i)
            const randomLeft = Math.floor(Math.random() * 90); 
            el.style.left = randomLeft + '%';

            // Random t·ªëc ƒë·ªô bay (t·ª´ 8s ƒë·∫øn 15s)
            const duration = Math.random() * 7 + 8; 
            el.style.animationDuration = duration + 's';

            container.appendChild(el);

            // X√≥a ph·∫ßn t·ª≠ sau khi bay xong ƒë·ªÉ nh·∫π m√°y
            setTimeout(() => {
                el.remove();
            }, duration * 1000);
        }

        // T·∫°o ph·∫ßn t·ª≠ m·ªõi m·ªói 1.5 gi√¢y
        setInterval(createFloatingElement, 1500);


        /* ==========================================
           PH·∫¶N 3: HI·ªÜU ·ª®NG PH√ÅO HOA (CANVAS)
           ========================================== */
        const canvas = document.getElementById('fireworksCanvas');
        const ctx = canvas.getContext('2d');
        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;

        // T·ª± ch·ªânh l·∫°i k√≠ch th∆∞·ªõc khi resize c·ª≠a s·ªï
        window.addEventListener('resize', () => {
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
        });

        class Particle {
            constructor(x, y, color) {
                this.x = x;
                this.y = y;
                this.color = color;
                // V·∫≠n t·ªëc t·ªèa ra ng·∫´u nhi√™n
                this.velocity = {
                    x: (Math.random() - 0.5) * 8,
                    y: (Math.random() - 0.5) * 8
                };
                this.alpha = 1; // ƒê·ªô trong su·ªët
                this.friction = 0.96; // Ma s√°t (ƒë·ªÉ ch·∫≠m d·∫ßn)
                this.gravity = 0.04; // Tr·ªçng l·ª±c (ƒë·ªÉ r∆°i xu·ªëng)
            }

            draw() {
                ctx.save();
                ctx.globalAlpha = this.alpha;
                ctx.beginPath();
                ctx.arc(this.x, this.y, 2, 0, Math.PI * 2, false);
                ctx.fillStyle = this.color;
                ctx.fill();
                ctx.restore();
            }

            update() {
                this.velocity.x *= this.friction;
                this.velocity.y *= this.friction;
                this.velocity.y += this.gravity;
                this.x += this.velocity.x;
                this.y += this.velocity.y;
                this.alpha -= 0.01; // M·ªù d·∫ßn
            }
        }

        let particles = [];

        function createFirework(x, y) {
            const particleCount = 80;
            // M√†u s·∫Øc ph√°o hoa (V√†ng, ƒê·ªè, H·ªìng, Xanh)
            const colors = ['#ff0040', '#ff00ff', '#ffff00', '#00ff00', '#00ffff'];
            const color = colors[Math.floor(Math.random() * colors.length)];
            
            for (let i = 0; i < particleCount; i++) {
                particles.push(new Particle(x, y, color));
            }
        }

        function animate() {
            requestAnimationFrame(animate);
            // T·∫°o hi·ªáu ·ª©ng v·ªát m·ªù (trails)
            ctx.fillStyle = 'rgba(0, 0, 0, 0.1)'; 
            ctx.fillRect(0, 0, canvas.width, canvas.height);

            particles.forEach((particle, index) => {
                if (particle.alpha > 0) {
                    particle.update();
                    particle.draw();
                } else {
                    particles.splice(index, 1);
                }
            });

            // T·ª± ƒë·ªông b·∫Øn ph√°o hoa ng·∫´u nhi√™n
            if (Math.random() < 0.03) { // T·ªâ l·ªá xu·∫•t hi·ªán
                const x = Math.random() * canvas.width;
                const y = Math.random() * canvas.height / 2; // B·∫Øn ·ªü n·ª≠a tr√™n
                createFirework(x, y);
            }
        }

        // B·∫Øt ƒë·∫ßu ch·∫°y ph√°o hoa
        animate();

        // Click chu·ªôt ƒë·ªÉ b·∫Øn ph√°o hoa
        window.addEventListener('click', (e) => {
            createFirework(e.clientX, e.clientY);
        });

    </script>
</body>
